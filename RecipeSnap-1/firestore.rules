rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /recipes/{recipeId} {
      allow read, write: if request.auth != null; // Allow access only to authenticated users
    }
    
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId; // Allow users to read/write their own data
    }
    
    // Add more rules as needed for other collections
  }
}